<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yuedong.football_mad">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".ui.HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.LoginActivity" />
        <activity android:name=".ui.AttestationActivity" />
        <activity
            android:name=".ui.UserInfoActivity"
            android:hardwareAccelerated="false" />
        <!-- 关闭硬件加速 -->
        <activity android:name=".ui.WebActivity" />
        <activity android:name=".ui.NewsDetailActivity" />
        <activity android:name=".ui.CommentListActivity" />
        <activity android:name=".ui.MyAttentionActivity" />
        <activity android:name=".ui.MyCommentListActivity" />
        <activity android:name=".ui.MyBallFriendActivity" />
        <activity android:name=".ui.MyHonorActivity" />
        <activity android:name=".ui.MyCollectActivity" />
        <activity android:name=".ui.MyMsgActivity" />
        <activity android:name=".ui.MyArticleActivity"></activity>
    </application>

</manifest>
