<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/greenE4EEEC"
        android:paddingLeft="11dp"
        android:paddingRight="5dp">

        <RelativeLayout
            android:id="@+id/rl_head"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_centerVertical="true"
            android:background="@drawable/level_quan_common">

            <com.yuedong.lib_develop.view.RoundImageView
                android:layout_width="29dp"
                android:id="@+id/iv_user_head"
                android:layout_height="29dp"
                android:layout_centerInParent="true"
 />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:layout_toRightOf="@+id/rl_head"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                style="@style/text_bold_blue_12sp"
                android:layout_width="93dp"
                android:singleLine="true"
                android:text="@string/str_test" />

            <TextView
                android:id="@+id/tv_level"
                style="@style/text_blue_9sp"
                android:layout_marginTop="2dp"
                android:text="普通评论员" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_zan_num"
            style="@style/text_bold_green_7sp"
            android:layout_width="36dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="11234566"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/tv_zan_num"
            android:src="@drawable/ic_green_border_zan" />

    </RelativeLayout>

    <include layout="@layout/splistview" />
</LinearLayout>