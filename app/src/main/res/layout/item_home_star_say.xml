<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:background="@color/greenE5EEEC"
        android:paddingLeft="10dp"
        android:paddingRight="7dp">

        <RelativeLayout
            android:id="@+id/id_item_head_layout"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_centerVertical="true"
            android:background="@drawable/level_quan_senior">

            <com.yuedong.lib_develop.view.RoundImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerInParent="true"
                android:src="@drawable/haizeiwang" />
        </RelativeLayout>

        <TextView
            style="@style/text_bold_blue_8pt"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_toLeftOf="@+id/iv_collect"
            android:layout_toRightOf="@+id/id_item_head_layout"
            android:singleLine="true"
            android:text="@string/str_test" />

        <ImageView
            android:id="@+id/iv_collect"
            style="@style/w_h_ww"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="70dp"
            android:src="@drawable/ic_xin_unselect" />


        <LinearLayout
            style="@style/w_h_ww"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_small_blue_say" />

            <TextView
                style="@style/text_blue_7pt"
                android:text="99" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical"
            android:paddingBottom="11dp"
            android:paddingLeft="11dp"
            android:paddingRight="22dp"
            android:paddingTop="5dp">

            <com.android.volley.toolbox.NetworkImageView
                android:layout_width="266dp"
                android:layout_height="wrap_content"
                android:background="@drawable/haizeiwang" />

            <View
                style="@style/line_black_2px"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" />

            <TextView
                style="@style/text_black_11pt"
                android:text="@string/str_test" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.android.volley.toolbox.NetworkImageView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/haizeiwang" />

            <TextView
                android:layout_marginTop="5dp"
                style="@style/text_blue_7pt"
                android:text="@string/str_time" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>