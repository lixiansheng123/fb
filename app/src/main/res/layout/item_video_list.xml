<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/bgf8f8f7_topround10dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll_play_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="93dp">
        <com.yuedong.lib_develop.view.RoundImageView
            android:id="@+id/iv_vedio_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:type="round"
            app:borderRadius="10dp"
            />

        <LinearLayout
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_green_play"
                />
            <TextView
                android:id="@+id/tv_time"
                android:layout_marginTop="8dp"
                style="@style/text_green_12sp"
                android:text="05:39"
                />
        </LinearLayout>
    </RelativeLayout>

    <!--让四周都是圆角的图片挡住下面的圆角-->
    <View
        android:layout_width="match_parent"
        android:background="@color/whiteF8F8F7"
        android:layout_height="10dp"
        android:layout_marginTop="-10dp"
        />
    <TextView
        android:id="@+id/tv_content"
        style="@style/text_black_12sp"
        android:layout_width="match_parent"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:text="@string/str_test"
        />
    </LinearLayout>

    <View
        style="@style/line_grey_1px"
        android:layout_marginTop="10dp"
        />
    <LinearLayout
        android:paddingTop="11dp"
        android:paddingBottom="11dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_user_info"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <RelativeLayout
                android:id="@+id/rl_head"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:background="@drawable/level_quan_common"
                >
                <com.yuedong.lib_develop.view.RoundImageView
                    android:id="@+id/iv_user_head"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/haizeiwang"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_name"
                android:layout_marginTop="2dp"
                style="@style/text_blue_9sp"
                android:text="@string/str_test_short"
                android:singleLine="true"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/tv_title"
            android:paddingRight="5dp"
            style="@style/text_bold_blue_14sp"
            android:text="@string/str_test_short"
            android:layout_width="0dp"
            android:layout_weight="1.41"
            android:layout_height="wrap_content"
            />
    </LinearLayout>


</LinearLayout>