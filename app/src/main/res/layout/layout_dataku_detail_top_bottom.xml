<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/whiteF8F8F7"
    android:orientation="vertical"
    >
    <View
        style="@style/line_grey_1px"
        android:layout_height="2px"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
                <TextView
                    android:id="@+id/tv_icon1"
                    style="@style/text_black5D5D5D_9sp"
                    android:layout_width="56dp"
                    android:layout_height="match_parent"
                    android:drawableTop="@drawable/ic_grey_cup"
                    android:gravity="center"
                    android:text="冠军杯席位"
                    />
            <TextView
                android:id="@+id/tv_grey1"
                android:gravity="center"
                android:layout_marginLeft="14dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/text_black5D5D5D_14sp"
                />

        </LinearLayout>
        <View
            style="@style/line_vertical_grey_1px"
            android:layout_width="2px"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_icon2"
                style="@style/text_black5D5D5D_9sp"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/ic_grey_zan"
                android:gravity="center"
                android:text="夺冠最多"
                />
            <TextView
                android:id="@+id/tv_grey2"
                android:gravity="center"
                android:layout_marginLeft="14dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/text_black5D5D5D_14sp"
                />

        </LinearLayout>
    </LinearLayout>
    <View
        style="@style/line_grey_1px"
        android:layout_height="2px"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_icon3"
                style="@style/text_black5D5D5D_9sp"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/ic_grey_time"
                android:gravity="center"
                android:text="创建时间"
                />
            <TextView
                android:id="@+id/tv_grey3"
                android:gravity="center"
                android:layout_marginLeft="14dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/text_black5D5D5D_14sp"
                />

        </LinearLayout>
        <View
            style="@style/line_vertical_grey_1px"
            android:layout_width="2px"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_icon4"
                style="@style/text_black5D5D5D_9sp"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/ic_grey_shoe"
                android:gravity="center"
                android:text="射手王"
                />
            <TextView
                android:id="@+id/tv_grey4"
                android:gravity="center"
                android:layout_marginLeft="14dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/text_black5D5D5D_14sp"
                />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
