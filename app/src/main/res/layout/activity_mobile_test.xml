<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
    <LinearLayout
        android:layout_marginTop="80dp"
        android:paddingLeft="45dp"
        android:paddingRight="45dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/bg_round_green_border1dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center"
                style="@style/text_green_14sp"
                android:text="手机号码"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@drawable/dashline_vertical_greenpic"
                />
            <EditText
                android:id="@+id/et_username"
                style="@style/text_black_14sp"
                android:layout_weight="1"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:singleLine="true"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                />
        </LinearLayout>

        <Button
            android:layout_marginLeft="5dp"
            android:background="@drawable/sel_get_code"
            android:layout_width="70dp"
            android:layout_height="33dp"
            android:text="验证"
            android:textColor="@color/greyEEEEEE"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:paddingLeft="45dp"
        android:paddingRight="45dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/bg_round_green_border1dp">

            <TextView
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:gravity="center"
                style="@style/text_green_14sp"
                android:text="验证码"
                />

            <View
                android:background="#A5A5A6"
                android:layout_width="1dp"
               style="@style/line_vertical_grey_1px"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                />

           <TextView
               android:layout_width="48dp"
               android:textColor="@color/green7FACA0"
               android:textSize="14sp"
               android:text="60s"
               android:layout_height="match_parent"
               android:gravity="center"/>


            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@drawable/dashline_vertical_greenpic"
                />

            <EditText
                style="@style/text_black_14sp"
                android:layout_weight="1"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:singleLine="true"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                />
        </LinearLayout>

        <Button
            android:id="@+id/btn_confirm"
            android:layout_marginLeft="5dp"
            android:background="@drawable/sel_get_code"
            android:layout_width="70dp"
            android:layout_height="33dp"
            android:text="确定"
            android:textColor="@color/greyEEEEEE"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="26dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_green_gou"
            />
        <TextView
            android:layout_marginLeft="5dp"
           style="@style/text_green_12sp"
            android:textSize="9sp"
            android:text="我已阅读并接受注册协议"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@color/green4B8D7F"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_login_smalllogo"
            />
        <TextView
            android:layout_marginLeft="15dp"
            style="@style/text_white_14sp"
            android:textSize="16sp"
            android:text="足球自媒体"
            android:textStyle="bold"
            />


    </LinearLayout>

</LinearLayout>
