<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/whiteF8F8F7"
    android:orientation="vertical">
    <LinearLayout
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_marginTop="66dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_round_green_border1dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center"
                style="@style/text_green_14sp"
                android:text="用户名"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@drawable/dashline_vertical_greenpic"
                />
            <EditText
                android:id="@+id/et_username"
                style="@style/text_black_14sp"
                android:layout_weight="1"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:singleLine="true"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="leo"
                />
        </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_round_green_border1dp">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    style="@style/text_green_14sp"
                    android:text="输入密码"
                    />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/dashline_vertical_greenpic"
                    />
                <EditText
                    android:id="@+id/et_password"
                    android:password="true"
                    style="@style/text_black_14sp"
                    android:layout_weight="1"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:singleLine="true"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="123456"
                    />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/btn_login"
            android:layout_marginLeft="12dp"
            android:gravity="center"
            style="@style/text_greyEEEEEE_13sp"
            android:textSize="14sp"
            android:text="登录"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/level_quan_senior"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_forget_password"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <View
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:background="@drawable/level_quan_senior"
            />
        <TextView
            android:layout_marginLeft="5dp"
            style="@style/text_green_14sp"
            android:textStyle="bold"
            android:text="忘记密码"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@color/green4B8D7F"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_login_smalllogo"
            />
        <TextView
            android:layout_marginLeft="15dp"
            style="@style/text_white_14sp"
            android:textSize="16sp"
            android:text="足球自媒体"
            android:textStyle="bold"
            />


    </LinearLayout>

</LinearLayout>