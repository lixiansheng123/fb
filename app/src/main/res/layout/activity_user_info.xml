<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="8dp">

            <RelativeLayout
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:background="@drawable/bgwhite_round8dp_bordergreen1dp">

                <com.android.volley.toolbox.NetworkImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_centerInParent="true"
                    android:scaleType="center" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/bgwhite_round8dp_bordergreen1dp">

                <com.android.volley.toolbox.NetworkImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_centerInParent="true"
                    android:scaleType="center" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_head"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:layout_centerInParent="true"
                android:background="@drawable/level_quan_expert">

                <com.yuedong.lib_develop.view.RoundImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/haizeiwang" />
            </RelativeLayout>

            <ImageView
                android:layout_marginBottom="-3dp"
                android:layout_marginRight="-3dp"
                android:layout_alignRight="@+id/rl_head"
                android:layout_alignBottom="@+id/rl_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_purple_camera"
                />

            <TextView
                style="@style/text_green_14sp"
                android:layout_width="match_parent"
                android:layout_below="@+id/rl_head"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="专业评论员" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="43dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.16"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            style="@style/text_grey666666_12sp"
                            android:text="13" />

                        <View
                            android:layout_width="20dp"
                            android:layout_height="2px"
                            android:layout_marginBottom="1dp"
                            android:layout_marginTop="1dp"
                            android:background="@color/greenA3C2BA" />

                        <TextView
                            style="@style/text_grey666666_9sp"
                            android:text="见地" />
                    </LinearLayout>

                    <View
                        android:layout_width="2px"
                        android:layout_height="24dp"
                        android:background="@color/greenA3C2BA" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.16"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            style="@style/text_grey666666_12sp"
                            android:text="13" />

                        <View
                            android:layout_width="20dp"
                            android:layout_height="2px"
                            android:layout_marginBottom="1dp"
                            android:layout_marginTop="1dp"
                            android:background="@color/greenA3C2BA" />

                        <TextView
                            style="@style/text_grey666666_9sp"
                            android:text="帖子" />
                    </LinearLayout>

                    <View
                        android:layout_width="2px"
                        android:layout_height="24dp"
                        android:background="@color/greenA3C2BA" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            style="@style/text_grey666666_12sp"
                            android:text="13" />

                        <View
                            android:layout_width="20dp"
                            android:layout_height="2px"
                            android:layout_marginBottom="1dp"
                            android:layout_marginTop="1dp"
                            android:background="@color/greenA3C2BA" />

                        <TextView
                            style="@style/text_grey666666_9sp"
                            android:text="评论" />
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_green_send" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="43dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.16"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            style="@style/text_grey666666_12sp"
                            android:text="13" />

                        <View
                            android:layout_width="20dp"
                            android:layout_height="2px"
                            android:layout_marginBottom="1dp"
                            android:layout_marginTop="1dp"
                            android:background="@color/greenA3C2BA" />

                        <TextView
                            style="@style/text_grey666666_9sp"
                            android:singleLine="true"
                            android:text="评论-跟帖" />
                    </LinearLayout>

                    <View
                        android:layout_width="2px"
                        android:layout_height="24dp"
                        android:background="@color/greenA3C2BA" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.16"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            style="@style/text_grey666666_12sp"
                            android:text="13" />

                        <View
                            android:layout_width="20dp"
                            android:layout_height="2px"
                            android:layout_marginBottom="1dp"
                            android:layout_marginTop="1dp"
                            android:background="@color/greenA3C2BA" />

                        <TextView
                            style="@style/text_grey666666_9sp"
                            android:singleLine="true"
                            android:text="文章获赞" />
                    </LinearLayout>

                    <View
                        android:layout_width="2px"
                        android:layout_height="24dp"
                        android:background="@color/greenA3C2BA" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            style="@style/text_grey666666_12sp"
                            android:text="13" />

                        <View
                            android:layout_width="20dp"
                            android:layout_height="2px"
                            android:layout_marginBottom="1dp"
                            android:layout_marginTop="1dp"
                            android:background="@color/greenA3C2BA" />

                        <TextView
                            style="@style/text_grey666666_9sp"
                            android:singleLine="true"
                            android:text="评论获赞" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_green_get" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/green4B8D7F"
        android:gravity="center"
        android:focusable="true"
        android:orientation="vertical">

        <EditText
            android:focusable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="一句话让自己看起来更专业"
            android:padding="12dp"
            android:singleLine="true"
            android:textColor="@color/greyC9CACA"
            android:textColorHint="@color/greyC9CACA"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="不超过50个字"
            android:textColor="@color/greyC9CACA"
            android:textSize="9sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/str_test"
            android:textColor="@color/greyEEEEEE"
            android:textSize="13sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:background="@color/greyEEEEEE"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical">

            <TextView
                style="@style/text_green_14sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="自媒体">

            </TextView>

            <ImageView
                android:id="@+id/iv_sel_zan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="center"
                android:src="@drawable/sel_zimeiti_zan" />

            <ImageView
                android:id="@+id/iv_sel_new"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="center"
                android:src="@drawable/sel_zimeiti_new" />

        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="@color/green4B8D7F" />

        <TextView
            android:id="@+id/tv_more"
            style="@style/text_green_12sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:text="更多" />
    </LinearLayout>
    <View
        style="@style/line_grey_1px"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>
