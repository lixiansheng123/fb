<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteF8F8F7"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        >
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/whiteF8F8F7"
            />
        <LinearLayout
            android:background="@android:color/white"
            android:layout_width="0dp"
            android:layout_weight="3.5"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            >
            <EditText
                android:paddingLeft="5dp"
                android:id="@+id/et_search"
                android:textSize="15sp"
                android:textColor="@color/greenA5C4BB"
                android:hint="请输入关键字"
                android:layout_width="0dp"
                android:layout_height="31dp"
                android:layout_weight="1"
                android:background="@drawable/bg_round_green_border1dp"
                />

            <Button
                android:id="@+id/btn_search"
                android:layout_marginLeft="26dp"
                android:text="搜索"
                android:textSize="16sp"
                android:textColor="@color/greyEEEEEE"
                android:textStyle="bold"
                android:layout_width="73dp"
                android:layout_height="31dp"
                android:background="@drawable/bggreen_round3dp"
                />
        </LinearLayout>
    </LinearLayout>
    <include
        layout="@layout/listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

</LinearLayout>
