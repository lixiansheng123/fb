<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@color/whiteF8F8F7"
    android:layout_height="120dp"
    >
    <LinearLayout
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:background="@drawable/level_quan_senior"
            android:layout_width="73dp"
            android:layout_height="73dp">
            <com.android.volley.toolbox.NetworkImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/iv_logo"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_rank"
            android:layout_marginTop="13dp"
            android:singleLine="true"
            style="@style/text_black5D5D5D_14sp"
            android:text="@string/str_dataku_detail_rank"
            />
    </LinearLayout>
    <View
        style="@style/line_vertical_grey_1px"
        />
    <LinearLayout
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@drawable/bgtransparency_round_green_border1dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_green1"
                style="@style/text_greyEEEEEE_13sp"
                android:textSize="14sp"
                android:gravity="center"
                android:singleLine="true"
                android:text="所属足协"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/bggreen_leftround5dp"
                />
            <TextView
                android:id="@+id/tv_white1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textStyle="bold"
                android:singleLine="true"
                android:gravity="center"
                style="@style/text_green_14sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="14dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@drawable/bgtransparency_round_green_border1dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_green2"
                style="@style/text_greyEEEEEE_13sp"
                android:textSize="14sp"
                android:gravity="center"
                android:singleLine="true"
                android:text="卫冕冠军"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/bggreen_leftround5dp"
                />
            <TextView
                android:id="@+id/tv_white2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textStyle="bold"
                android:singleLine="true"
                android:gravity="center"
                style="@style/text_green_14sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="14dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@drawable/bgtransparency_round_green_border1dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_green3"
                style="@style/text_greyEEEEEE_13sp"
                android:textSize="14sp"
                android:gravity="center"
                android:singleLine="true"
                android:text="赛事头牌"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/bggreen_leftround5dp"
                />
            <TextView
                android:id="@+id/tv_white3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textStyle="bold"
                android:singleLine="true"
                android:gravity="center"
                style="@style/text_green_14sp"
                />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>