<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <View
        android:id="@+id/view_gap"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

<LinearLayout
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@color/whiteF8F8F7"
    android:gravity="center"
    android:layout_height="158dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_menjiang"
             android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/ic_weizhi_menjiang"
            />

        <ImageView
            android:id="@+id/iv_houwei"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/ic_weizhi_houwei"
            />

        <ImageView
            android:id="@+id/iv_zhongchang"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/ic_weizhi_zhongchang"
            />

        <ImageView
            android:id="@+id/iv_qianfeng"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/ic_weizhi_qianfeng"
            />
    </LinearLayout>



</LinearLayout>
</LinearLayout>