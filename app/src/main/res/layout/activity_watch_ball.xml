<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
 >
    <RelativeLayout
        android:background="@color/green4B8D7F"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <ImageView
            android:id="@+id/btn_left"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_round_return"
            />

        <LinearLayout
            android:layout_centerInParent="true"
            android:background="@drawable/ic_white_clock"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_day"
                android:layout_marginLeft="37dp"
                style="@style/text_greyEEEEEE_13sp"
                android:textSize="9sp"
                android:text="2015.12.1"
                />
            <TextView
                android:id="@+id/tv_time"
                android:layout_marginLeft="37dp"
                style="@style/text_greyEEEEEE_13sp"
                android:textSize="9sp"
                android:text="周二18:00"
                />
        </LinearLayout>

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_title_send"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

</LinearLayout>
