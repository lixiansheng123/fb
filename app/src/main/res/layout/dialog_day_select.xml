<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/view_gap"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@color/whiteF8F8F7"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <kankan.wheel.widget.WheelView
                    android:id="@+id/id_wheelview_year"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></kankan.wheel.widget.WheelView>

                <kankan.wheel.widget.WheelView
                    android:id="@+id/id_wheelview_month"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></kankan.wheel.widget.WheelView>

                <kankan.wheel.widget.WheelView
                    android:id="@+id/id_wheelview_day"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></kankan.wheel.widget.WheelView>
            </LinearLayout>
            <View
                android:layout_gravity="center_vertical"
                android:layout_width="40dp"
                android:layout_height="2dp"
                android:background="@color/green4B8D7F"
                />
        </FrameLayout>

        <View
            style="@style/line_grey_1px"
            android:layout_height="1dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/greyEEEEEF">

            <ImageView
                android:id="@+id/id_select_cancle"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/ic_green_cancel" />

            <ImageView
                android:id="@+id/id_select_confirm"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:scaleType="center"
                android:src="@drawable/ic_green_confirm" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>