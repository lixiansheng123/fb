<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include layout="@layout/title_2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:padding="11dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <RelativeLayout
                android:id="@+id/rl_head"
                android:layout_centerVertical="true"
                android:layout_width="33dp"
                android:background="@drawable/level_quan_common"
                android:layout_height="33dp">
                <com.yuedong.lib_develop.view.RoundImageView
                    android:layout_width="28dp"
                    android:layout_centerInParent="true"
                    android:layout_height="28dp"
                    android:src="@drawable/haizeiwang"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/rl_head"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <TextView

                android:singleLine="true"
                style="@style/text_bold_blue_8.5pt"
                android:text="@string/str_test"
                />
            <TextView
                android:layout_marginTop="2dp"
                style="@style/text_blue_7pt"
                android:text="资深评论员"
                />
            </LinearLayout>

        </RelativeLayout>
        <com.yuedong.lib_develop.view.BannerView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.55"
            />

    </LinearLayout>
    <View
       style="@style/line_blue_1px"/>
    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/greyEEEEEE"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/btn_comment"
            android:scaleType="center"
            android:layout_width="94dp"
            android:src="@drawable/ic_white_write_comment"
            android:layout_height="match_parent"
            android:background="@color/green4B8D7F"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:src="@drawable/sel_green_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="2dp"
                style="@style/text_green_8.5pt"
                android:text="2016"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:src="@drawable/ic_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="2dp"
                style="@style/text_green_8.5pt"
                android:text="字体"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:src="@drawable/sel_green_cai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="2dp"
                style="@style/text_green_8.5pt"
                android:text="2016"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:src="@drawable/sel_collect"
                android:layout_width="28dp"
                android:layout_height="28dp" />
            <TextView
                android:layout_marginTop="2dp"
                style="@style/text_green_8.5pt"
                android:text="收藏"
                />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
   

</LinearLayout>
