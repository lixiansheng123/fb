<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/green4B8D7F"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/title_btn_left"
        android:scaleType="center"
        android:src="@drawable/ic_title_more" />

    <RelativeLayout
        android:id="@+id/title_center"
        style="@style/w_h_wm"
        android:layout_centerInParent="true"
        android:background="@drawable/ic_title_bar_logo">
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_title"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="作者用户名"
            android:textColor="@android:color/white"
            />
    </RelativeLayout>
    <ImageView
        android:id="@+id/title_btn_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_title_send" />
</RelativeLayout>