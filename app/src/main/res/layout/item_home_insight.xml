<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include layout="@layout/include_home_insignt_list_item_suspend" />

    <RelativeLayout
        android:background="@color/greenE5EEEC"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:paddingLeft="10dp"
        android:paddingRight="7dp">

        <RelativeLayout
            android:id="@+id/id_item_head_layout"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_centerVertical="true"
            android:background="@drawable/level_quan_senior">

            <com.yuedong.lib_develop.view.RoundImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerInParent="true"
                android:src="@drawable/haizeiwang" />
        </RelativeLayout>

        <TextView
            style="@style/text_bold_blue_11sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_toLeftOf="@+id/ll_commontator"
            android:layout_toRightOf="@+id/id_item_head_layout"
            android:singleLine="true"
            android:text="@string/str_test" />

        <LinearLayout
            android:id="@+id/ll_commontator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_commentator"
                style="@style/text_bold_blue_10sp"
                android:layout_marginRight="13dp"
                android:text="普通评论员" />

            <TextView
                style="@style/text_blue_10sp"
                android:text="@string/str_time" />
        </LinearLayout>

        <LinearLayout
            style="@style/w_h_ww"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_small_blue_zan" />

                <TextView
                    style="@style/text_blue_10sp"
                    android:text="100" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_small_blue_say" />

                <TextView
                    style="@style/text_blue_10sp"
                    android:text="99" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <include layout="@layout/item_home_touch" />


</LinearLayout>