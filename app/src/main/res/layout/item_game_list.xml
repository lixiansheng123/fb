<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="31dp">

        <TextView
            android:id="@+id/tv_label_time"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="1920-12-12"
            style="@style/text_greyEEEEEE_12sp"
            android:background="@drawable/bg_green_round"
            android:layout_width="78dp"
            android:layout_height="20dp"
            />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/iv_home_logo"
                android:layout_width="45dp"
                android:layout_height="45dp" />
            <TextView
                android:id="@+id/tv_home_name"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                style="@style/text_black5D5D5D_14sp"
                android:textSize="13sp"
                android:singleLine="true"
                android:text="@string/str_test"
                />
        </LinearLayout>
        <LinearLayout
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_game_time"
                style="@style/text_black5D5D5D_14sp"
                android:textSize="10sp"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="周二-15:00"
                />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            <TextView
                android:id="@+id/tv_score"
                android:layout_gravity="center"
                style="@style/text_green_16sp"
                android:textSize="18sp"
                android:text="1:2"
                />
                <ImageView
                    android:id="@+id/iv_collect"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_green_big_star_unselect"
                    />
            </FrameLayout>
            <TextView
                android:gravity="center"
                android:id="@+id/tv_channel"
                style="@style/text_black5D5D5D_14sp"
                android:textSize="10sp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@string/str_test"
                />
        </LinearLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <com.android.volley.toolbox.NetworkImageView
                android:layout_gravity="right"
                android:layout_width="33dp"
                android:layout_height="11dp"
                android:visibility="gone"
                android:id="@+id/iv_logo"
                />
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/iv_guest_logo"
                    android:layout_width="45dp"
                    android:layout_height="45dp" />
                <TextView
                    android:id="@+id/tv_guest_name"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    style="@style/text_black5D5D5D_14sp"
                    android:textSize="13sp"
                    android:singleLine="true"
                    android:text="@string/str_test"
                    />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>