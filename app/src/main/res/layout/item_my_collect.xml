<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">


  <include layout="@layout/layout_item_my_collect_top"/>

    <LinearLayout
        android:paddingLeft="11dp"
        android:paddingRight="11dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_head"
            android:layout_width="33dp"
            android:background="@drawable/level_quan_common"
            android:layout_height="33dp">
            <com.yuedong.lib_develop.view.RoundImageView
                android:layout_width="28dp"
                android:id="@+id/iv_user_head"
                android:layout_centerInParent="true"
                android:layout_height="28dp"
                android:src="@drawable/haizeiwang"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_name"
            android:layout_marginLeft="14dp"
            android:singleLine="true"
            android:layout_width="55dp"
            style="@style/text_blue_12sp"
            android:text="@string/str_test"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/tv_content"
            android:text="@string/str_test"
            style="@style/text_bold_blue_14sp"
            android:singleLine="true"
            android:layout_marginRight="11dp"
            android:layout_marginLeft="14dp"
            />
        <ImageView
            android:visibility="invisible"
            android:id="@+id/iv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_green_delete"
            />


    </LinearLayout>
</LinearLayout>